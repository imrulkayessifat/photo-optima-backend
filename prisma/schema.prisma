generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  NOT_COMPRESSED
  ONGOING
  RESTORING
  COMPRESSED
}

enum Plan {
  FREE
  MICRO
  PRO
  ADVANCED
  PREMIUM
  PLUS
  ENTERPRISE
}

enum CompressType {
  BALANCED
  CONSERVATIVE
  CUSTOM
}

model Session {
  id               String            @id @default(uuid())
  accessToken      String?
  expires          DateTime?
  isOnline         Boolean
  scope            String?
  shop             String
  state            String
  apiKey           String
  onlineAccessInfo OnlineAccessInfo?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model OnlineAccessInfo {
  id                  String          @id @default(uuid())
  session             Session?        @relation(fields: [sessionId], references: [id])
  sessionId           String?         @unique
  expiresIn           Int
  associatedUserScope String
  associatedUser      AssociatedUser?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
}

model AssociatedUser {
  id                 String            @id @default(uuid())
  onlineAccessInfo   OnlineAccessInfo? @relation(fields: [onlineAccessInfoId], references: [id])
  onlineAccessInfoId String?           @unique
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  userId             BigInt
  firstName          String
  lastName           String
  email              String
  accountOwner       Boolean
  locale             String
  collaborator       Boolean
  emailVerified      Boolean
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model SubscriptionPlan {
  id        Int    @id @default(autoincrement())
  name      String
  bandwidth Int
  price     Float
}

model Store {
  name            String        @id
  plan            String        @default("FREE")
  dataUsed        Float?        @default(0)
  chargeId        String?
  autoCompression Boolean       @default(false)
  autoFileRename  Boolean       @default(false)
  batchCompress   Boolean       @default(false)
  batchRestore    Boolean       @default(false)
  autoAltRename   Boolean       @default(false)
  compressionType CompressType? @default(BALANCED)
  jpeg            Float?        @default(80)
  png             Float?        @default(80)
  others          Float?        @default(80)
  product         Product[]
  filerename      Filerename[]
  altrename       Altrename[]
}

model Filerename {
  id                 String
  product_vendor     Boolean @default(false)
  variant_title      Boolean @default(false)
  product_page_title Boolean @default(false)
  product_type       Boolean @default(false)
  product_barcode    Boolean @default(false)
  product_title      Boolean @default(true)
  product_sku        Boolean @default(false)
  storename          String
  store              Store   @relation(fields: [storename], references: [name])

  @@id([id, storename])
}

model Altrename {
  id                 String
  product_vendor     Boolean @default(false)
  variant_title      Boolean @default(false)
  product_page_title Boolean @default(false)
  product_type       Boolean @default(false)
  product_barcode    Boolean @default(false)
  product_title      Boolean @default(true)
  product_sku        Boolean @default(false)
  storename          String
  store              Store   @relation(fields: [storename], references: [name])

  @@id([id, storename])
}

model Product {
  id                 String
  title              String
  images             Image[]
  product_vendor     String? @default("")
  variant_title      String? @default("")
  product_page_title String? @default("")
  product_type       String? @default("")
  product_barcode    String? @default("")
  product_title      String? @default("")
  product_sku        String? @default("")
  storename          String
  store              Store   @relation(fields: [storename], references: [name])

  @@id([id, storename])
}

model Image {
  uid        Int      @id @default(autoincrement())
  id         String
  url        String
  name       String?
  alt        String?
  productId  String
  status     Status?  @default(NOT_COMPRESSED)
  fileRename Boolean? @default(false)
  altRename  Boolean? @default(false)
  storename  String
  product    Product  @relation(fields: [productId, storename], references: [id, storename])
}

model Backupimage {
  restoreId String @id
  url       String
}

model Backupfilename {
  restoreId String @id
  name      String
}

model Backupaltname {
  restoreId String @id
  alt       String
}
